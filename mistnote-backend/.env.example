# 服务器配置
PORT=5000
NODE_ENV=development

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/mistnote

# JWT配置
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_EXPIRES_IN=7d

# 客户端URL
CLIENT_URL=http://localhost:3000

# 日志级别
LOG_LEVEL=info

# 文件上传配置
MAX_FILE_SIZE=100MB
MAX_AVATAR_SIZE=5MB
